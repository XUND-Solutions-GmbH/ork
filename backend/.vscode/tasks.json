{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "label": "npm: lint",
      "detail": "eslint . --ext .tsx,.ts,.jsx,.js --cache"
    },
    {
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d", "db"],
      "label": "up-databases",
      "detail": "Starts the DBs from Docker",
      "dependsOn": ["tsc: build - tsconfig.json"]
    },
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc"],
      "group": "build",
      "label": "tsc: build - tsconfig.json"
    }
  ]
}
